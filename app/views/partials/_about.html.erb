<section id="organization">
  <div class="container test-test-test">
    <h2 class="center-title scrollReveal sr-bottom">Organization</h2>
    <div class="center-border"></div>
    <div class="space-40"></div>
    <div>
      <!-- Nav tabs -->
      <ul class="list-inline text-center about-tabs justify-content-center nav margin-b-40" role="tablist">
        <% @organizations.each_with_index do |organization, index| %>
          <% if index == 0 %>
            <li class="nav-item" role="presentation">
              <a class="nav-link active" href="#<%= organization.tab_name %>" aria-controls="about-agency" role="tab" data-toggle="tab"><%= organization.tab_name %></a>
            </li>
          <% else %>
            <li class="nav-item" role="presentation">
              <a class="nav-link" href="#<%= organization.tab_name %>" aria-controls="about-agency" role="tab" data-toggle="tab"><%= organization.tab_name %></a>
            </li>
          <% end %>
        <% end %>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <% @organizations.each_with_index do |organization, index| %>
        <% if index == 0 %>
        <div class="tab-pane active" id="<%= organization.tab_name %>" role="tabpanel">
          <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
              <p class="lead">
                <%= organization.body.html_safe %>
              </p>
            </div>
          </div>
        </div>
        <% else %>
        <div class="tab-pane" id="<%= organization.tab_name %>" role="tabpanel">
          <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
              <p class="lead">
                <%= organization.body.html_safe %>
              </p>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div><!--tab content end-->
    </div>
  </div><!--container end-->
</section>
