<div class="col-md-6 d-inline-block align-top">
  <a href="/projects/<%= project.id %>">
    <img class="img-fluid project-index-img" src="<%= asset_path project.featured_image.url %>" alt="">
  </a>
  <h2 class='project-index-name'><%= project.name %></h2>
  <% project.tags.each do |tag| %>
  <a href="/tags/<%= tag.id %>" class="btn btn-sm btn-skin-border project-tags"><%= tag.name %></a>
  <% end %>
</div>
