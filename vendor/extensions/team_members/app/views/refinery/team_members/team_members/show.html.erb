<% content_for :body_content_title do %>
  <%= @team_member.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @team_member.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @team_member.last_name %>
    </p>
  </section>
  <section>
    <h1>Role</h1>
    <p>
      <%=raw @team_member.role %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @team_member.bio %>
    </p>
  </section>
  <section>
    <h1>Primary Image</h1>
    <p>
      <%= image_fu @team_member.primary_image, nil %>
    </p>
  </section>
  <section>
    <h1>Secondary Image</h1>
    <p>
      <%= image_fu @team_member.secondary_image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="team_members">
      <% @team_members.each do |team_member| %>
        <li>
          <%= link_to team_member.first_name, refinery.team_members_team_member_path(team_member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
