<section id="team-show-hero" class="overflow-hidden slider-banner">
  <div class="main-slider">
    <ul class="slides">
      <li>
        <%= image_tag(@team_member.secondary_image.url,class:"img-fluid img-hero") %>

        <div class="slider-overlay">
          <div class="slider-table">
            <div class="slider-vm">
              <div class="container text-center text-overlay">
                <h1><%= @team_member.first_name + " " + @team_member.last_name %></h1>
              </div>
            </div>
          </div>
        </div><!--slider overlay end-->
      </li>
    </ul>
  </div>
</section>
<div class='container'>
  <div class='space-50'></div>
  <div class="row">
    <div class="col-md-8 offset-md-2 site-text-align">
        <div class="text-center">
          <h3><%= @team_member.role %></h3>
        </div>
      <%= @team_member.bio.html_safe %>
    </div>
  </div>

</div>
