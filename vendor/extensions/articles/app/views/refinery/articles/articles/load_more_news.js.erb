<% @articles.each do |article| %>
  $('#articles-list').append("<%= j(render('stub', article: article)) %>");
<% end %>
<% if @articles.last.position > params[:article_position].to_i + @num_of_new_articles - 1 %>
  $('#load-more-link').data("params", "article_position=<%= @articles.last.position %>");
<% else %>
  $('#load-more-link').hide();
<% end %>
