<% @new_articles.each do |article| %>
  $('#articles-list').append("<%= j(render('stub', article: article)) %>");
<% end %>
<% if @new_articles.last.id != @last_article_id %>
  var articleCount = "loaded_article_count=" + $('.news-item').length.toString()
  $('#load-more-link').data("params", articleCount );
<% else %>
  $('#load-more-link').hide();
<% end %>
