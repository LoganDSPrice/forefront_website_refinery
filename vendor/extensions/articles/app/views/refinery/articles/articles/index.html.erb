<section id="news-index-hero" class="overflow-hidden slider-banner">
  <div class="main-slider">
    <ul class="slides">
      <li>
        <div class="single-image-wrapper img-hero">
          <div class="single-image" style="background-image:url(<%= asset_path @news.hero_image.url %>)"></div>
        </div>
        <div class="slider-overlay">
          <div class="slider-table">
            <div class="slider-vm">
              <div class="container text-center text-overlay">
                <h1><%= @news.hero_banner_text %></h1>
              </div>
            </div>
          </div>
        </div><!--slider overlay end-->
      </li>
    </ul>
  </div>
</section>
<!-- news section -->
<section id="services">
  <div class="hero-image-content-spacer"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <ul class="row list-unstyled services-list" id="articles-list">
          <%= render partial: "stub", collection: @articles, as: :article%>
        </ul><!--service list end-->
        <div class="col-md-12 text-center">
          <a href="/load_more_news" data-remote="true" data-params="loaded_article_count=<%= @articles.count %>" id="load-more-link" class="btn btn-lg btn-skin-border btn-block margin-b-20">Load More</a>
        </div>
      </div>
    </div><!--row end-->
    <div class="space-60"></div>
  </div>
</section>
