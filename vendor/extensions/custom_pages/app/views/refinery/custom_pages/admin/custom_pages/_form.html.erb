<%= form_for [refinery, :custom_pages_admin, @custom_page] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @custom_page,
              :include_object_name => true %>

  <% if @custom_page.name == "Team" || @custom_page.name == "News" %>
    <div class='field'>
      <%= f.label :hero_image -%>
      <%= render '/refinery/admin/image_picker',
      :f => f,
      :field => :hero_image_id,
      :image => @custom_page.hero_image,
      :toggle_image_display => false -%>
    </div>
  <% end %>

  <% if @custom_page.hero_banner_text %>
    <div class='field'>
      <%= f.label :hero_banner_text -%>
      <%= f.text_field :hero_banner_text -%>
    </div>
  <% end %>

  <% if @custom_page.body_header %>
  <div class='field'>
    <%= f.label :body_header -%>
    <%= f.text_field :body_header -%>
  </div>
  <% end %>

  <% if @custom_page.body %>
    <div class='field'>
      <%= render '/refinery/admin/wysiwyg',
      :f => f,
      :fields => [:body],
      :object => "custom_pages/custom_page" -%>
    </div>
  <% end %>


  <% if @custom_page.address_line_1 %>
    <div class='field'>
      <%= f.label :address_line_1 -%>
      <%= f.text_field :address_line_1, style:"width:300px" -%>
    </div>
  <% end %>

  <% if @custom_page.address_line_2 %>
    <div class='field'>
      <%= f.label :address_line_2 -%>
      <%= f.text_field :address_line_2, style:"width:300px" -%>
    </div>
  <% end %>

  <% if @custom_page.city_state_zip %>
    <div class='field'>
      <%= f.label :city_state_zip -%>
      <%= f.text_field :city_state_zip, style:"width:300px" -%>
    </div>
  <% end %>

  <% if @custom_page.phone_number %>
    <div class='field'>
      <%= f.label :phone_number -%>
      <%= f.text_field :phone_number, style:"width:300px", placeholder:"e.g. 1234567890" -%>
    </div>
  <% end %>

  <% if @custom_page.email_address %>
    <div class='field'>
      <%= f.label :email_address -%>
      <%= f.text_field :email_address, style:"width:300px" -%>
    </div>
  <% end %>

  <% if @custom_page.map_embed %>
    <div class="field">
      <%= f.label :map_embed %>
      <%= f.text_area :map_embed, style: "width:400px", rows:"3" %>
    </div>
  <% end %>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.custom_pages.admin.custom_pages.custom_page'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @custom_page.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
