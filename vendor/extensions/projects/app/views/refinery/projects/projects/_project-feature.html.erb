<% if project == @projects.first %>
  <li>
<% else %>
  <li class="initially-hidden">
<% end %>
  <div class="single-image-wrapper img-hero">
    <div class="single-image" style="background-image:url(<%= asset_path project.featured_image.url %>)"></div>
  </div>
  <div class="slider-overlay">
    <div class="slider-table">
      <div class="slider-vm">
        <a href="<%=projects_project_path(project)%>" >
          <div class="container text-center project-heading text-overlay">
            <h1 style="margin-bottom:0px"><%=project.name%></h1>
            <span id="see-more-button" class="btn btn-lg btn-white-border" style="display:inline-block !important">See More</span>
          </div>
        </a>
      </div>
    </div>
  </div><!--slider overlay end-->
</li>
