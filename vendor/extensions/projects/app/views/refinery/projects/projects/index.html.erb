
<div class="container">
  <div class="dropdown align-text-top">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      FILTER BY MARKET
    </button>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
      <a class="dropdown-item" href="/tags/<%= Refinery::Tags::Tag.find_by(name: 'Residential').id %>">Residential</a>
      <a class="dropdown-item" href="/tags/<%= Refinery::Tags::Tag.find_by(name: 'Commercial').id %>">Commercial</a>
      <a class="dropdown-item" href="/tags/<%= Refinery::Tags::Tag.find_by(name: 'Hospitality').id %>">Hospitality</a>
      <a class="dropdown-item" href="/tags/<%= Refinery::Tags::Tag.find_by(name: 'Institutional').id %>">Institutional</a>
      <a class="dropdown-item" href="/tags/<%= Refinery::Tags::Tag.find_by(name: 'Community').id %>">Community</a>
      <a class="dropdown-item" href="/tags/<%= Refinery::Tags::Tag.find_by(name: 'Mixed-Use').id %>">Mixed-Use</a>
    </div>
  </div>

  <% @projects.each_with_index do |project, index| %>
    <% if (index+1)%2!=0 %>
      <div class="row">
      <%= render partial: "stub", locals: { project: project} %>
    <% else %>
      <%= render partial: "stub", locals: { project: project} %>
      </div>
    <% end %>
  <% end %>

  <div class="spacer">

  </div>
</div>
