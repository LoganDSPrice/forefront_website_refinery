<section id="project-show-hero" class="overflow-hidden slider-banner">
  <div class="main-slider">
    <ul class="slides">
      <li>
        <%= image_tag(@project.featured_image.url,class:"img-hero") %>
        <div class="slider-overlay">
          <div class="slider-table">
            <div class="slider-vm">
              <div class="container text-center text-overlay project-heading">
                <h1><%= @project.name %></h1>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</section>

<section id="project">
  <div class="container">

    <div class="row">
      <div class="space-20"></div>
      <div class="col-md-8 offset-md-2 project-show-tags">
        <% @project.tags.each do |tag| %>
        <a href="/tags/<%= tag.id %>" class="btn btn-sm btn-skin-border project-tags"><%= tag.name %></a>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="space-20"></div>
      <div class="col-md-8 offset-md-2" >
        <table class="table">
          <thead>
            <tr>
              <th>Team</th>
              <th>Location</th>
              <th>Size</th>
              <th>Completion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @project.team_name if @project.team_name %></td>
              <td><%= @project.location if @project.location %></td>
              <td><%= number_with_delimiter(@project.area) + " sq ft" if @project.area%></td>
              <td><%= @project.completion_date.year if @project.completion_date %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="space-20"></div>
      <div class="col-md-8 offset-md-2 site-text-align">
        <p><%= raw(@project.description) %></p>
      </div>
    </div>
  </div>
</section>

<section id="image-gallery" class="spacer">
  <div class="container">
    <div class="row">
      <% @project.images.each_with_index do |image,i| %>
      <div class="col-md-3 col-6 padding-override"> <!-- I don't understand why col-xs-6 doesn't work to define column size on mobile -->
        <div class="gallery-thumbnail-wrapper">
          <%= image_tag(image.url, onclick:"openModal();currentSlide(#{i+1})", class:"hover-shadow") %>
        </div>
      </div>
      <% end %>
      <div id="myModal"class="modal">
        <span class="close cursor" onclick="closeModal()">&times;</span>
        <div class="modal-content">
          <% @project.images.each do |image| %>
          <div class="mySlides">
            <div class="numbertext">1 / 4</div>
            <div class="modal-slide">
              <%= image_tag(image.url) %>
            </div>
          </div>
          <% end %>
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
          <div class="row modal-thumbnails-wrapper">
            <% @project.images.each_with_index do |image,i| %>
            <div class="col-md-1 padding-override">
              <div class="gallery-thumbnail-wrapper">
                <%= image_tag(image.url,class:"demo",onclick:"currentSlide(#{i+1})") %>
              </div>
              <!-- <img class="demo" src="img1.jpg" onclick="currentSlide(1)" alt="Nature"> -->
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="spacer">

</div>
