<%= form_for [refinery, :projects_admin, @project] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @project,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "projects/project" -%>
  </div>

  <div class='field'>
    <%= f.label :featured_image, 'Main image' -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :featured_image_id,
               :image => @project.featured_image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :team_name -%>
    <%= f.text_field :team_name -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>

  <div class='field'>
    <%= f.label :area -%>
    <%= f.number_field :area -%>
  </div>

  <div class='field'>
    <%= f.label :completion_date -%>
    <%= f.date_select :completion_date -%>
  </div>

  <div class='field'>
    <%= f.label :featured, 'Is this project featured?' -%>
    <%= f.check_box :featured, :checked => @project[:featured] -%>
  </div>

  <div class='field'>
    <%= f.label :category_id -%>
    <%#= f.number_field :category_id -%>
    <%= f.select :category_id, @categories.collect {|c| [c.name,c.id]} %>
    <%#= f.select :category_id, Category.pluck(:name) %> <%# This sends the name of the category in the params. Need to figure out how to change controller method to find category id to update the field  %>
  </div>


  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <li class='ui-state-default ui-state-active'>
          <%#= link_to 'Blurb', "#page_part_blurb" %>
        </li>
        <% Refinery::Projects.tabs.each_with_index do |tab, tab_index| %>
          <li class='ui-state-default' id="custom_<%= tab.name %>_tab">
            <%= link_to tab.name.titleize, "#custom_tab_#{tab_index}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% part_index = -1 %>
          <%#= render 'form_part', :f => f, :part_index => (part_index += 1) -%>
        <% Refinery::Projects.tabs.each_with_index do |tab, tab_index| %>
          <div class='page_part' id='<%= "custom_tab_#{tab_index}" %>'>
            <%= render tab.partial, :f => f %>
          </div>
        <% end %>
      </div>
    </div>
  </div>





  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.projects.admin.projects.project'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @project.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
